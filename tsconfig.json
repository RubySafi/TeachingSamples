{
  "compilerOptions": {
    "target": "ES2020",            // 出力される JavaScript のバージョン
    "module": "ESNext",            // モジュールのタイプ（ESM）
    "lib": ["ES2021", "DOM", "DOM.Iterable"],     
    "strict": true,                // 厳格な型チェック
    "esModuleInterop": true,       // ES モジュールの互換性を確保
    "skipLibCheck": true,          // ライブラリの型チェックをスキップ
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",            // コンパイル結果を出力するディレクトリ
    "moduleResolution": "node",    // モジュール解決の方法を Node.js に準拠
    "resolveJsonModule": true,     // JSON モジュールの解決
    "isolatedModules": true,       // ファイル単位での型チェック
    "noEmit": false                 // 型チェックのみ（出力を抑制）
  },
  "include": ["src/**/*.ts"],       // コンパイルするファイルのパターン
  "exclude": ["node_modules"]       // コンパイル対象外のディレクトリ
}
